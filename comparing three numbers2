#!/bin/bash

# Напишите скрипт, 
# который будет сравнивать три числа и находить наибольшее среди них

read -p "Введите первое число: " num1
read -p "Введите второе число: " num2
read -p "Введите третье число: " num3

if [ $num1 -gt $num2 ] && [ $num1 -gt $num3 ];
then
    echo "Наибольшим числом является $num1"
elif 
    [ $num2 -gt $num3 ] && [ $num2 -gt $num1 ];
then
    echo "Наибольшим числом является $num2";
else
    echo "Наибольшим числом является $num3"
fi

echo "Ваши числа были $num1, $num2, $num3"
