#!/bin/bash

# Чтение чисел от пользователя
read -p  "Пожалуйста, введите первое число: " num1 
read -p  "Пожалуйста, введите второе число: " num2
read -p  "Пожалуйста, введите третье число: " num3

# Сравнение чисел и вывод наибольшего
if [ "$num1" -gt "$num2" ] && [ "$num1" -gt "$num3" ]; then
    echo "Число $num1 является наибольшим"

elif [ "$num2" -gt "$num1" ] && [ "$num2" -gt "$num3" ]; then
    echo " Число "$num2" является наибольшим"

else 
    echo "Число "$num3" является наибольшим"

fi


# Вывод введенных чисел
echo "Ваши числа были: "$num1", "$num2", "$num3" "

